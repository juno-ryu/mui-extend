{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/core/*": ["./core/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "core/shared/components/general/editor",
    "core/shared/components/general/picture",
    "core/shared/components/general/loading-screen",
    "core/shared/components/general/pagination-with-datagrid",
    "core/shared/components/general/footer-marqvision",
    "core/shared/components/general/trans-multiline",
    "core/shared/components/auth",
    "core/shared/components/overlay",
    "core/shared/components/upload",
    "core/shared/hooks/upload",
    "core/utils/i18next"
  ]
}
